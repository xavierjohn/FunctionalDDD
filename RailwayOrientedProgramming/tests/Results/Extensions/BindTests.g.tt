    void WriteNums(int n) {
        Write(String.Join(", ", Enumerable.Range(1, n).Select(i => 40 + i)));
    }

    void WriteParamNums(int n) {
        Write(String.Join(", ", Enumerable.Range(1, n).Select(i => "num" + i)));
    }

    void WriteStrNums(int n) {
        Write(String.Join(" ", Enumerable.Range(1, n).Select(i => "{num" + i + "}")));
    }

